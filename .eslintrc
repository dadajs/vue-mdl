{
    "env": {
        "node": true,
        "es6": true
    },

    "ecmaFeatures": {
        "arrowFunctions": true,
        "destructuring": true,
        "classes": true,
        "defaultParams": true,
        "blockBindings": true,
        "modules": true,
        "objectLiteralComputedProperties": true,
        "objectLiteralShorthandMethods": true,
        "objectLiteralShorthandProperties": true,
        "restParams": true,
        "spread": true,
        "templateStrings": true
    },

    "rules": {
        "comma-spacing": [1, {"before": false, "after": true}],
        "no-extra-semi": 1
    }
}
